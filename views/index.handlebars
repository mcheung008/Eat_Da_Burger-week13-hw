<h1>Eat Da Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </div>
        <div class="col">

            <h2>Burgers that are devoured!</h2>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not devoured
    </div>

    <button type="submit">Add Burger</button>
</form>